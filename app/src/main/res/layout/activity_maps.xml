<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doghill.yetanothermapactivity.MapsActivity" />

<Button android:id="@+id/googlemaps_previous_location"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Previous"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="101dp"
    android:layout_marginStart="101dp"
    android:onClick="goToPreviousLocation"/>

    <Button android:id="@+id/googlemaps_next_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/googlemaps_previous_location"
        android:layout_toEndOf="@+id/googlemaps_previous_location"
        android:onClick="goToNextLocation" />

</RelativeLayout>